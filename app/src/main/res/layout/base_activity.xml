<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?dividerHorizontal"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pl_message_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <me.zhanghai.android.patternlock.PatternView
            android:id="@+id/pl_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/pl_left_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="@dimen/margin_35"
            android:layout_marginRight="@dimen/margin_35"
            android:drawableLeft="@drawable/cross"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_weight="1"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_3"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/pl_right_button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:drawableRight="@drawable/right_black"
            android:drawablePadding="10dp"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>


</LinearLayout>
