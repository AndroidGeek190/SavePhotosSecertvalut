<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PinLockActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_pinlock">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        >
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        ads:adSize="BANNER"

        ads:adUnitId="abc"
        android:id="@+id/adView"/>
</LinearLayout>
 <!--   <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_lock"/>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@string/enter_PIN_Code"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/please_Enter_the_Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/box"
        android:id="@+id/editText"
        android:layout_marginBottom="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_15"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_2"
                android:text="2"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="3"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_3"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="5"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_5"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_6"
                android:text="6"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="8"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_8"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="9"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_9"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@android:color/transparent"
                android:id="@+id/Button11"
                android:layout_gravity="center_horizontal" />
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_state"
                android:id="@+id/pin_code_button_0"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/backspace"
                android:id="@+id/pin_code_button_clear"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_gravity="center_vertical"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/cross"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="@dimen/margin_35"
                    android:layout_marginRight="@dimen/margin_35"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:id="@+id/button_cancel" />
        <View
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_3"
            android:background="@android:color/darker_gray"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Continue"
                    android:textColor="@color/disabled_color"
                    android:enabled="false"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/right_black"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="@dimen/margin_35"
                    android:layout_marginRight="@dimen/margin_35"
                    android:layout_gravity="center_vertical|center_horizontal"

                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/button_continue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:drawableRight="@drawable/right_black"
                android:enabled="false"
                android:textColor="@color/disabled_color"
                android:textSize="20sp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="@dimen/margin_35"
                android:layout_marginRight="@dimen/margin_35"
                android:layout_gravity="center_vertical|center_horizontal"

                android:id="@+id/button_confirm" /></LinearLayout>

</LinearLayout>
